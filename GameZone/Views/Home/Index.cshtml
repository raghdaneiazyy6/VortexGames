@model IEnumerable<Game>

@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid px-4 mt-4">
    @if (!Model.Any())
    {
        <div class="gaming-card p-5 text-center">
            <div class="neon-text mb-4">
                <i class="bi bi-joystick fs-1"></i>
            </div>
            <h4 class="text-primary mb-3">Welcome to VortexGames!</h4>
            <p class="text-secondary mb-4">No games have been added to the collection yet. Check back soon for awesome games!</p>
            <div class="pulse-effect">
                <i class="bi bi-controller fs-2 text-info"></i>
            </div>
        </div>
    }
    else
    {
        <div class="games-grid">
            @foreach (var game in Model)
            {
                <div class="game-card-modern">
                    <a class="game-card-link-modern" asp-controller="Games" asp-action="Details" asp-route-id="@game.Id">
                        <div class="game-card-inner">
                            <div class="game-image-container">
                                <img src="@($"{FileSettings.ImagesPath}/{game.Cover}")" alt="@game.Name" class="game-image" />
                                <div class="game-overlay-modern">
                                    <div class="game-gradient"></div>
                                </div>
                            </div>

                            <div class="game-content-overlay">
                                <div class="category-badge-modern">
                                    @game.Category?.Name
                                </div>

                                <div class="game-info-modern">
                                    <h3 class="game-title-modern">@game.Name</h3>
                                    <div class="game-platforms">
                                        @foreach (var gameDevice in game.Devices)
                                        {
                                            <i class="@gameDevice.Device.Icon platform-icon"></i>
                                        }
                                    </div>
                                </div>
                            </div>

                            <div class="card-shine"></div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
</div>

<div class="spacer-bottom"></div>